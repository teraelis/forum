        {% for group in mygroups %}
            <li{% if group['userRole'] == 'mod' %} class="mod"{% endif %}><a href="{{ path('group_view', {id: group[0].id}) }}">{{ showGroup(group[0]) }}</a>{% if group['userRole'] == 'mod' %} - mod√©rateur du groupe{% endif %}</li>
        {% endfor %}
